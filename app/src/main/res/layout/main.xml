<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="3">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:background="@android:color/holo_purple">
        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            />
        <ImageView
            android:id="@+id/run"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />
        <ImageView
            android:id="@+id/dustbin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/componentContainer"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@android:color/holo_red_light" >
        <TextView
            android:id="@+id/componentText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Components"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/predicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="predicate"
                android:padding="5dp"
                android:textColor="@android:color/background_light" />
            <TextView
                android:id="@+id/variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_purple"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="variable"
                android:padding="5dp"
                android:textColor="@android:color/background_light" />
            <TextView
                android:id="@+id/query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="query"
                android:padding="5dp"
                android:textColor="@android:color/background_light" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/playgroundContainer"
        android:layout_width="560dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:background="@android:color/holo_orange_light"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="310dp"
            android:minHeight="310dp"
            android:layout_row="1">

            <LinearLayout
                android:id="@+id/playground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/playgroundText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Coding Playground"
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark" />
            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:id="@+id/variablesContainer"
        android:layout_width="200dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:background="@android:color/holo_orange_dark"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:id="@+id/variables"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/variablesText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Variables List"
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/consoleContainer"
        android:layout_width="960dp"
        android:layout_height="180dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_light"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@android:color/holo_blue_light"
            android:orientation="vertical"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/console"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/consoleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Console"
                    android:textSize="20sp"
                    android:padding="5dp"/>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/consoleCommandLine"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:focusableInTouchMode="true"
            android:background="@android:color/darker_gray">
            <TextView
                android:id="@+id/consoleArrow"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:layout_alignParentStart="true"
                android:text=">"
                />
            <Button
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text=";"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_toLeftOf="@+id/enter"
                android:background="@android:color/holo_orange_light"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/enter"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="Send"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_alignParentEnd="true"
                android:textStyle="bold"
                android:background="@android:color/holo_green_light" />
        </RelativeLayout>
    </RelativeLayout>
</GridLayout>