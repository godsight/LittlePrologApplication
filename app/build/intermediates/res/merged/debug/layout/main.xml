<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:rowCount="3">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_row="0"
        android:layout_columnSpan="3"
        android:gravity="center"
        android:background="@android:color/holo_purple">
        <TextView
            android:id="@+id/instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/componentContainer"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@android:color/holo_red_light" >
        <TextView
            android:id="@+id/componentText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Components"
            android:textSize="20dp"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/predicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="predicate"
                android:padding="5dp"
                android:textColor="@android:color/background_light" />
            <TextView
                android:id="@+id/variable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_purple"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="15sp"
                android:text="variable"
                android:padding="5dp"
                android:textColor="@android:color/background_light" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/playgroundContainer"
        android:layout_width="560dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:background="@android:color/holo_orange_light"
        android:scrollbars="vertical"
        >
         <LinearLayout
            android:id="@+id/playground"
            android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/playgroundText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Coding Playground"
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/variablesContainer"
        android:layout_width="200dp"
        android:layout_height="310dp"
        android:layout_row="1"
        android:background="@android:color/holo_orange_dark"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:id="@+id/variables"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/variablesText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Variables List"
                android:textSize="20dp"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/consoleContainer"
        android:layout_width="960dp"
        android:layout_height="180dp"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:background="@android:color/holo_blue_light"
        android:scrollbars="vertical"
        >
    <LinearLayout
        android:id="@+id/console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_light"
        android:orientation="vertical">


        <TextView
            android:id="@+id/consoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Console"
            android:textSize="20sp"
            android:padding="5dp"/>
    </LinearLayout>
</ScrollView>
</GridLayout>